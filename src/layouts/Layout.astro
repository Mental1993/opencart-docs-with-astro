---
import '../styles/reset.css'
import '../styles/utils.css'

import Header from '@components/Header.astro'
import Aside from '@components/Aside.astro'
import AsideRight from '@components/AsideRight.astro'
export interface Props {
	title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang='el'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width, initial-scale=1' />
		<link rel='icon' type='image/svg+xml' href='/img/fav.png' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<main>
			<Aside />
			<div class='main-content'>
				<slot />
			</div>
			<AsideRight />
		</main>
	</body>
</html>

<style is:global>
	@font-face {
		font-family: 'source-serif';
		src: url('/fonts/source-serif/source-serif-v.ttf') format('truetype');
		font-style: normal;
	}

	:root {
		--theme-primary-color: #fc6e2f;
		--theme-text: #e3e2e9;
		--theme-font: 'source-serif', sans-serif;
		--theme-sidebar-width: 18rem;
	}

	::-webkit-scrollbar,
	::-webkit-scrollbar-track {
		background-color: transparent;
	}

	::-webkit-scrollbar-thumb {
		background-color: hsla(250, 14%, 90%, 0.2);
		border: 4px solid transparent;
		background-clip: content-box;
		border-radius: 10px;
	}

	body {
		background: rgb(18 18 18);
		background: -webkit-linear-gradient(0deg, rgb(30 30 30) 0%, rgb(44 44 44) 100%);
		color: var(--theme-text);
		font-family: var(--theme-font);
		min-height: 100vh;
	}

	.main-content {
		margin-inline-start: var(--theme-sidebar-width);
		margin-inline-end: var(--theme-sidebar-width);
	}
</style>
